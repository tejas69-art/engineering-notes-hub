---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="VTU Results - Engineering Hub">
  <main>
    <h1>VTU <span class="text-gradient">Results</span></h1>
    
    <div class="results-container">
      <div class="search-section">
        <h2>Search Results</h2>
        <form class="search-form" id="resultForm">
          <div class="form-group">
            <label for="usn">USN:</label>
            <input 
              type="text" 
              id="usn" 
              name="usn" 
              placeholder="Enter your USN"
              pattern="[1-4][A-Za-z]{2}[0-9]{2}[A-Za-z]{2}[0-9]{3}"
              title="Please enter a valid VTU USN (e.g., 1AB20CS001)"
              required
            />
          </div>
          
          <button type="submit" class="search-btn">Search Results</button>
        </form>
      </div>

      <div class="info-section">
        <h2>Important Information</h2>
        <ul>
          <li>Results are typically declared within 30-45 days after examinations</li>
          <li>Keep your USN handy for quick result checks</li>
          <li>Results shown here are synchronized with the official VTU portal</li>
          <li>For revaluation/recounting, visit the official VTU website</li>
        </ul>
      </div>

      <div class="links-section">
        <h2>Quick Links</h2>
        <div class="quick-links">
          <a href="https://results.vtu.ac.in" target="_blank" rel="noopener noreferrer" class="link-card">
            <h3>Official VTU Results Portal ↗</h3>
            <p>Access your results directly from the official VTU website</p>
          </a>
          <a href="/tools/sgpa-calculator" class="link-card">
            <h3>SGPA Calculator</h3>
            <p>Calculate your Semester Grade Point Average</p>
          </a>
          <a href="/tools/cgpa-calculator" class="link-card">
            <h3>CGPA Calculator</h3>
            <p>Calculate your Cumulative Grade Point Average</p>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    max-width: 1200px;
    color: white;
  }
  h1 {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .results-container {
    display: grid;
    gap: 2rem;
  }
  .search-section {
    background: rgba(var(--accent-dark), 0.2);
    padding: 2rem;
    border-radius: 8px;
  }
  .search-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 1rem auto;
  }
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .form-group label {
    font-size: 1.1rem;
  }
  .form-group input {
    padding: 0.8rem;
    border-radius: 4px;
    border: 1px solid rgba(var(--accent-light), 0.2);
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 1rem;
  }
  .search-btn {
    padding: 1rem;
    background: rgb(var(--accent-light));
    color: rgb(var(--accent-dark));
    border: none;
    border-radius: 4px;
    font-size: 1.1rem;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }
  .search-btn:hover {
    opacity: 0.9;
  }
  .info-section {
    background: rgba(var(--accent-dark), 0.2);
    padding: 2rem;
    border-radius: 8px;
  }
  .info-section ul {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }
  .info-section li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }
  .info-section li::before {
    content: "•";
    color: rgb(var(--accent-light));
    position: absolute;
    left: 0;
  }
  .links-section {
    background: rgba(var(--accent-dark), 0.2);
    padding: 2rem;
    border-radius: 8px;
  }
  .quick-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }
  .link-card {
    background: rgba(var(--accent-light), 0.1);
    padding: 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: white;
    transition: transform 0.2s ease;
  }
  .link-card:hover {
    transform: translateY(-2px);
  }
  .link-card h3 {
    color: rgb(var(--accent-light));
    margin: 0 0 0.5rem 0;
  }
  .link-card p {
    margin: 0;
    opacity: 0.8;
  }
  h2 {
    color: rgb(var(--accent-light));
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }
  @media (max-width: 768px) {
    .quick-links {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const form = document.getElementById('resultForm');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const usn = (document.getElementById('usn') as HTMLInputElement).value;
    
    // Here you would typically make an API call to fetch results
    // For now, we'll redirect to the official VTU results page
    window.open(`https://results.vtu.ac.in`, '_blank');
  });
</script> 