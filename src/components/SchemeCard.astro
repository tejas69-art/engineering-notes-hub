---
interface Props {
  year: string;
  description: string;
  href: string;
}

const { year, description, href } = Astro.props;
---

<a href={href} class="scheme-card">
  <div class="content">
    <h3>{year} Scheme</h3>
    <p>{description}</p>
  </div>
</a>

<style>
  .scheme-card {
    display: block;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    text-decoration: none;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .content {
    padding: 1.5rem;
    background-color: #23262d;
    border-radius: 6px;
    height: 100%;
  }
  h3 {
    margin: 0;
    font-size: 1.5rem;
    color: rgb(var(--accent-light));
    margin-bottom: 0.5rem;
  }
  p {
    margin: 0;
    color: #fff;
    opacity: 0.8;
    font-size: 0.9rem;
    line-height: 1.4;
  }
  .scheme-card:hover {
    background-image: var(--accent-gradient);
    background-position: 0%;
  }
</style>